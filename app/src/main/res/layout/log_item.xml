<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="16dp">
        <TextView
            android:id="@+id/source_contact_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/contact_name"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/source_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/timestamp"
            android:textColor="@color/colorText"
            android:layout_below="@id/source_contact_name_item"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/destination_contact_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/contact_name"
            android:textColor="@color/colorAccent"
            android:layout_below="@id/source_timestamp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/destination_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/timestamp"
            android:textColor="@color/colorText"
            android:layout_below="@id/destination_contact_name_item"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/routing_nodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/timestamp"
            android:textColor="@color/colorText"
            android:layout_below="@id/destination_timestamp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>